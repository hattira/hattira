head
  meta(charset="utf-8")
  meta(http-equiv="X-UA-Compatible", content="IE=edge,chrome=1")

  title= pkg.name + ' - ' + title
  meta(http-equiv="Content-type", content="text/html;charset=UTF-8")
  - if (req.city)
    meta(name="keywords", content="Events,#{req.city.name}, #{req.city.name} events, Local")
    meta(name="description", content="Events in #{req.city.name}")
  - else
    meta(name="keywords", content=pkg.keywords.join(","))
    meta(name="description", content=pkg.description)

  link(href="/favicon.ico", rel="shortcut icon", type="image/x-icon")
  //
     Opengraph tags
  meta(property="og:title", content=pkg.name + ' - ' + title)
  meta(property="og:description", content=pkg.description)
  meta(property="og:url", content=pkg.homepage)
  meta(property="og:site_name", content=pkg.description)

  link(rel="stylesheet", href="http://fonts.googleapis.com/css?family=Cuprum|Dancing+Script", type="text/css")

  link(rel="stylesheet", href="/static/css/bootstrap.min.css")
  link(rel="stylesheet", href="/static/css/bootstrap-theme.min.css")
  link(rel="stylesheet", href="/static/css/datetimepicker.min.css")
  link(rel="stylesheet", href="/static/css/app.css")
